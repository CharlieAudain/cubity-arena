rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match the actual path used in the app
    match /artifacts/cubity-v1/public/data/rooms/{roomId} {
      // Allow read/create if authenticated
      allow read, create: if request.auth != null;
      
      // Allow update/delete ONLY if the user is the creator
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Users collection (assuming root level based on user request, but might be nested)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
