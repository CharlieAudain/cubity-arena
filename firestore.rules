rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.email in [
               'audain27@gmail.com'  // Replace with your actual admin email
             ];
    }
    
    // Artifacts collection
    match /artifacts/{appId} {
      
      // Users collection (nested structure)
      // /artifacts/{appId}/users/{userId}/...
      match /users/{userId}/{document=**} {
        // Users can read/write their own data
        allow read, write: if isOwner(userId);
        // Admins can read/write any user data
        allow read, write: if isAdmin();
      }
      
      // Public Data
      match /public/data {
        // Broad read access for public data
        match /{document=**} {
          allow read: if isSignedIn();
        }

        // Usernames collection - special rules
        match /usernames/{username} {
          // Users can create/update their own username
          allow create, update: if isSignedIn() && 
                                   (!exists(/databases/$(database)/documents/artifacts/$(appId)/public/data/usernames/$(username)) ||
                                    resource.data.uid == request.auth.uid);
          // Users can delete their own username
          allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
          // Admins can do anything with usernames
          allow write: if isAdmin();
        }
        
        // Rooms collection
        match /rooms/{roomId} {
          // Anyone can create rooms
          allow create: if isSignedIn();
          // Room participants can update
          allow update: if isSignedIn();
          // Users can delete rooms they're in
          allow delete: if isSignedIn() && 
                           (resource.data.player1.uid == request.auth.uid || 
                            resource.data.player2.uid == request.auth.uid);
          // Admins can delete any room
          allow delete: if isAdmin();
        }
        
        // Banned users collection
        match /banned_users/{username} {
          // Only admins can ban/unban
          allow write: if isAdmin();
        }
        
        // Leaderboard
        match /leaderboard/{entry} {
          allow write: if isSignedIn();
        }
        
        // Matches
        match /matches/{matchId} {
          allow write: if isSignedIn();
        }
        
        // Profiles (public profiles)
        match /profiles/{userId} {
          allow write: if isOwner(userId) || isAdmin();
        }
      }
    }
  }
}
